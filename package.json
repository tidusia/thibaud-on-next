{
  "name": "thibaud-on-next",
  "description": "Personal website on Next.js",
  "scripts": {
    "build": "next build --no-lint",
    "deploy": "npm run build && npm run export",
    "dev": "next dev",
    "export": "next export",
    "formatters": "npm run prettier:check && npm run lint && npm run typescript:check",
    "integrity": "npm run formatters && npm run build && npm run storybook:build && npm run jest:all && npm run storybook:test:integrity",
    "jest:all": "jest",
    "jest:watch": "jest --watch",
    "lint": "next lint -- --ignore-path .gitignore",
    "pre-commit": "lint-staged --verbose && npm run typescript:check && jest -o && npm run storybook:test:only-changed",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "start": "next start",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:test": "test-storybook --url http://localhost:6006 --browsers chromium",
    "storybook:test:integrity": "start-server-and-test storybook:dev 6006 storybook:test",
    "storybook:test:only-changed": "start-server-and-test storybook:dev 6006 'npm run storybook:test -- -- -o'",
    "typescript:check": "tsc --noEmit"
  },
  "author": "@tidusia",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@mapbox/rehype-prism": "^0.9.0",
    "@vercel/analytics": "^1.1.1",
    "clsx": "^1.2.1",
    "gray-matter": "^4.0.3",
    "next": "^13.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.6.1",
    "@storybook/addon-actions": "^7.6.1",
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/addon-interactions": "^7.6.1",
    "@storybook/addon-links": "^7.6.1",
    "@storybook/jest": "^0.2.3",
    "@storybook/nextjs": "^7.6.1",
    "@storybook/react": "^7.6.1",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "start-server-and-test": "^2.0.3",
    "storybook": "^7.6.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  }
}
